<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:id="@+id/cartLayout">

        <ImageView
            android:id="@+id/iv_adpcart_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_adpcart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="70dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Name"/>
            <LinearLayout
                android:id="@+id/ll_adpcart_attrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_adpcart_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="2kg"
                    android:padding="4sp"
                    android:textColor="@color/green_dark" />

                <TextView
                    android:id="@+id/tv_adpcart_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="120 Rs"
                    android:textColor="@color/black"
                    android:padding="4sp"
                    android:layout_marginLeft="4sp"
                    android:visibility="gone"/>
            </LinearLayout>



            <TextView
                android:id="@+id/tv_adpcart_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_adpcart_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="normal"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_adpcart_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/red_a"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Edit"
                android:visibility="gone"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_adpcart_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_adpcart_plus1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_plus" />

            <TextView
                android:id="@+id/tv_adpcart_qty1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/iv_adpcart_minus1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:padding="8dp"
                android:src="@drawable/ic_delete" />

        </RelativeLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
