<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/red_a"
    android:gravity="bottom"
    android:orientation="vertical"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6sp"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_ShowUserImage"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:contentDescription="@string/nav_header_desc"
            android:src="@drawable/ic_user"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/gray_c"
            app:civ_circle_background_color="@color/green_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_header_title"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/tv_ShowUserName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="4sp"
            android:layout_marginTop="4sp"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height=".5sp"
        android:background="@color/gray_c"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
