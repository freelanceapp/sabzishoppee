<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ProductDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:background="@color/red_a">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:tint="@color/white"
                android:layout_margin="4sp"
                android:id="@+id/btn_product_detail_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Product Details "
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="6sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6sp"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="6sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="false"
                            android:id="@+id/ivProductDetailImg" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Name"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:padding="6sp"
                            android:layout_marginLeft="6sp"
                            android:id="@+id/tvProductDetailName"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/tvProductDetailName"
                            android:layout_marginLeft="6sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs. 50 "
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/green_dark"
                                android:padding="6sp"
                                android:layout_marginLeft="6sp"
                                android:id="@+id/tvProductDetailPrice"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-Selling price"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_f"
                                android:padding="6sp"
                                android:layout_marginLeft="6sp"
                                android:id="@+id/tvProductDetailSallingPrice"/>



                        </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/rlCart"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true">

                                <RelativeLayout
                                    android:id="@+id/ll_product_action"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="end"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_product_plus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:src="@drawable/icf_rounded_add"/>

                                    <TextView
                                        android:id="@+id/tv_product_qty"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:textStyle="bold"
                                        android:text="1"
                                        android:textColor="@color/black"
                                        android:textSize="18dp" />

                                    <ImageView
                                        android:id="@+id/iv_product_minus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:src="@drawable/icf_round_minus" />

                                </RelativeLayout>

                                <android.support.v7.widget.CardView
                                    android:id="@+id/btnAdd"
                                    android:layout_width="90dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="4dp"
                                    app:cardCornerRadius="20dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/layout_bg_rhl1">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="16dp"
                                            android:textSize="12sp"
                                            android:text="ADD"
                                            android:textStyle="bold"
                                            android:textColor="@color/green_dark"/>

                                        <TextView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_gravity="center"
                                            android:layout_margin="8dp"
                                            android:background="@drawable/icf_rounded_add"
                                            android:gravity="center"
                                            android:textColor="@color/white"
                                            android:textSize="12sp"
                                            android:textStyle="bold" />
                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>
                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailType">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Type"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Type"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailType"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailCostPrice">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cost price"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rs 150"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailCostPrice"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailMinOrder">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Min order quantity"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1 kg"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailMinOrder"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailStockQuantity"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="In stock Quantity"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="50kg"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailStockQuantity"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailAvailability"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Availability"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Active"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailAvailability"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetaildiscount">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discount"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5%"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetaildiscount"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailRating">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rating"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Type"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end|center_vertical"
                        android:id="@+id/tvProductDetailRating"
                        android:drawableRight="@drawable/ic_star"
                        android:drawablePadding="4sp"
                        android:drawableTint="@color/red_900"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Description"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="4sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dfvjknb peob eprobn peorbn peobn"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginBottom="20dp"
                    android:textSize="12sp"
                    android:padding="4sp"
                    android:id="@+id/tvProductDetailDescription"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cart_button_bar"
        android:text="View Cart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/btnAddtoCart"/>
</RelativeLayout>