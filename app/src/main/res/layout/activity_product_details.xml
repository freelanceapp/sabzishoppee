<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ProductDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:tint="@color/black"
                android:layout_margin="4sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Product Details "
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="6sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6sp"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="6sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="false"
                            android:id="@+id/ivProductDetailImg" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Name"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:padding="6sp"
                            android:layout_marginLeft="6sp"
                            android:id="@+id/tvProductDetailName"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="6sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs. 50 "
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/green_dark"
                                android:padding="6sp"
                                android:layout_marginLeft="6sp"
                                android:id="@+id/tvProductDetailPrice"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-Selling price"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_f"
                                android:padding="6sp"
                                android:layout_marginLeft="6sp"
                                android:id="@+id/tvProductDetailSallingPrice"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailType">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Type"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Type"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailType"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailCostPrice">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cost price"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rs 150"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailCostPrice"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailMinOrder">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Min order quantity"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1 kg"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailMinOrder"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailStockQuantity"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="In stock Quantity"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="50kg"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailStockQuantity"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetailAvailability"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Availability"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Active"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetailAvailability"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/llProductDetaildiscount">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discount"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5%"
                        android:textSize="14sp"
                        android:padding="4sp"
                        android:textColor="@color/gray_d"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:id="@+id/tvProductDetaildiscount"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Description"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:padding="4sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dfvjknb peob eprobn peorbn peobn"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginBottom="20dp"
                    android:textSize="12sp"
                    android:padding="4sp"
                    android:id="@+id/tvProductDetailDescription"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cart_button_bar"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/btnAddtoCart"/>
</RelativeLayout>