    <RelativeLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/ivProductImg"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fresh_strawberry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivProductImg"
            android:layout_toLeftOf="@+id/rlCart"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2sp"
            android:paddingBottom="2sp"
            android:text="Strawberry"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvProductType"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6sp"
            android:paddingTop="1sp"
            android:paddingBottom="1sp"
            android:text="Strawberry"
            android:textColor="@color/gray_c"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvProductQuality"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6sp"
            android:paddingRight="6sp"
            android:text="1 Kg"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvProductsellingPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs. 50"
                android:textColor="@color/green_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProductPrice"
                style="@style/sectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2sp"
                android:text="Rs. 50"
                android:textColor="@color/gray_d"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

            <TextView
                android:id="@+id/tvMinOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:paddingTop="4sp"
                android:paddingBottom="4sp"
                android:text="Min Order Qty: 1kg"
                android:textSize="10sp" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rlCart"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:id="@+id/ll_product_action"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_product_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/icf_rounded_add"/>

                <TextView
                    android:id="@+id/tv_product_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iv_product_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/icf_round_minus" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/btnAdd"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_rhl1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:textSize="12sp"
                        android:text="ADD"
                        android:textStyle="bold"
                        android:textColor="@color/green_dark"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/icf_rounded_add"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D9D9DA"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>